{
  "compilerOptions": {
    "baseUrl": "app",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "~components": ["src/components"],
      "~components/*": ["src/components/*"],
      "~styles": ["src/styles"],
      "~styles/*": ["src/styles/*"],
      "~types": ["src/types"],
      "~types/*": ["src/types/*"],
      "~utils": ["src/utils"],
      "~utils/*": ["src/utils/*"]
    },
    "incremental": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "**/*.stories.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.scss",
    "custom.d.ts",
    ".next/types/**/*.ts"
  ]
}
